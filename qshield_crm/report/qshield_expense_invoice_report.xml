<odoo>
    <data>
        <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <xpath expr="//table[@name='invoice_line_table']//tbody[hasclass('invoice_tbody')]//tr//td[@name='account_invoice_line_name']"
                   position="replace">
                <td name="account_invoice_line_name">
                    <span t-field="line.description" t-options="{'widget': 'text'}"/>
                </td>
            </xpath>
        </template>

        <record id="report_expense_invoice_paperformat" model="report.paperformat">
            <field name="name">Expense Invoices</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">23</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">20</field>
            <field name="dpi">90</field>
        </record>

        <report
                id="account_expense_invoices"
                model="account.move"
                string="Expense Invoices"
                report_type="qweb-pdf"
                name="qshield_crm.report_qshield_expense_invoice"
                file="qshield_crm.report_qshield_expense_invoice"
                print_report_name="(object._get_report_base_filename())"
                paperformat="qshield_crm.report_expense_invoice_paperformat"
        />
        <template id="report_qshield_expense_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <html>
                                <link href="https://fonts.googleapis.com/css2?family=Prata&amp;display=swap"
                                      rel="stylesheet"/>
                                <link href="https://fonts.googleapis.com/css2?family=Bentham&amp;family=Prata&amp;display=swap"
                                      rel="stylesheet"/>
                                <link href="https://fonts.googleapis.com/css2?family=Sora:wght@145&amp;display=swap"
                                      rel="stylesheet"/>
                                <style type="text/css">
                                    body{
                                    text-align:justify;
                                    font-size:16px;
                                    line-height: 1.5;
                                    }
                                </style>
                                <body>
                                    <div class="row">
                                        <div class="float-left col-4">
                                            <img src="/qshield_crm/static/src/img/img_logo.png"
                                                 style="margin-bottom:20px;height:50px;width: 180px;"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">

                                            <span>
                                                <t t-esc="o.partner_id.name"/>
                                            </span>
                                            <t t-if="o.partner_id.street">
                                                <br/>
                                                <span><t t-esc="o.partner_id.street"/>,
                                                </span>
                                            </t>
                                            <t t-if="o.partner_id.street2">
                                                <br/>
                                                <span><t t-esc="o.partner_id.street2"/>,
                                                </span>
                                            </t>
                                            <t t-if="o.partner_id.city">
                                                <br/>
                                                <span>
                                                    <t t-esc="o.partner_id.city"/>
                                                    <t t-if="o.partner_id.zip">
                                                        ,
                                                        <t t-esc="o.partner_id.zip"/>
                                                    </t>
                                                </span>
                                            </t>
                                            <t t-if="o.partner_id.state_id">
                                                <br/>
                                                <span><t t-esc="o.partner_id.state_id.name"/>,
                                                    <t t-esc="o.partner_id.country_id.name"/>
                                                </span>
                                            </t>


                                        </div>
                                        <div class="col-4">
                                            <span>
                                                <i class="fas fa-map-marker-alt"></i>
                                                <t t-esc="o.company_id.partner_id.name"/>
                                                <br/>
                                                <t t-esc="o.company_id.street"/>
                                                <br/>
                                                <t t-esc="o.company_id.street2"/>
                                            </span>

                                            <span><t t-esc="o.company_id.state_id.name"/>,
                                                <t t-esc="o.company_id.country_id.name"/>
                                            </span>
                                            <br/>
                                            <span>
                                                <i class="fal fa-phone-square-alt"></i>
                                                <t t-esc="o.company_id.phone"/>
                                            </span>
                                            <br/>
                                            <span>
                                                <i class="far fa-envelope"></i>
                                                <t t-esc="o.company_id.email"/>
                                            </span>
                                            <br/>

                                        </div>
                                        <div class="col-4">
                                            <span>
                                                <t t-esc="o.invoice_date"/>
                                            </span>
                                            <br/>
                                            <span>
                                                <t t-esc="o.name"/>
                                            </span>
                                            <br/>
                                            <span>
                                                <t t-esc="o.ref"/>
                                            </span>
                                        </div>
                                    </div>

                                    <table class="table table-borderless" style="border: 1px solid black;">
                                        <thead>
                                            <tr>
                                                <td colspan="8">
                                                    <span>
                                                        <b>
                                                            <t t-esc="o.name"/>
                                                        </b>
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>No</th>
                                                <th>Contact</th>
                                                <th>Contract(Company)</th>
                                                <th>Service Name</th>
                                                <th>Case Id</th>
                                                <th>Status</th>
                                                <th>Government Fee</th>
                                                <th>Service Fee</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-set="i" t-value="1"/>
                                            <t t-set="total_government" t-value="0.0"/>
                                            <t t-set="total_service_amount" t-value="0.0"/>
                                            <tr t-foreach="o.invoice_line_ids" t-as="line">
                                                <!--                                                <t t-if="line.service_request_id">-->
                                                <td>
                                                    <span t-esc="i"/>
                                                    <t t-set="i" t-value="i+1"/>
                                                </td>
                                                <td>
                                                    <span t-esc="line.move_id.partner_id.name"/>
                                                </td>
                                                <td>
                                                    <t t-if="line.partner_id.person_type == 'company'">
                                                        <span t-esc="line.partner_id.name"/>
                                                    </t>
                                                    <t t-if="line.partner_id.person_type != 'company' and line.partner_id.related_company">
                                                        <span t-esc="line.partner_id.related_company.name"/>
                                                    </t>
                                                </td>
                                                <td>
                                                    <t t-if="line.service_request_id">
                                                        <span t-esc="line.service_request_id.service_type_id.name"/>
                                                    </t>
                                                    <t t-else="">
                                                        <span t-esc="line.name"/>
                                                    </t>
                                                </td>
                                                <td>
                                                    <t t-if="line.service_request_id">
                                                        <span t-esc="line.service_request_id.name"/>
                                                    </t>
                                                    <t t-set="sale_order"
                                                       t-value="line.sale_line_ids.mapped('order_id')"/>
                                                    <t t-if="sale_order.is_agreement == 'is_retainer' and sale_order.approver_setting_id.type =='crm_approver'">
                                                        <t t-set="contract_id"
                                                           t-value="o.env['ebs_mod.contracts'].search([('sale_order_id','=',sale_order.id)],limit=1)"/>
                                                        <span>Retainer</span>
                                                        <span t-esc="contract_id.name"/>
                                                    </t>

                                                </td>
                                                <td>
                                                    <t t-if="line.service_request_id.status">
                                                        <span t-esc="line.service_request_id.status"/>
                                                    </t>
                                                    <t t-else="">
                                                        <span>-</span>
                                                    </t>
                                                </td>
                                                <td class="text-right">
                                                    <t t-if="line.is_government_fees_line">
                                                        <t t-set="total_government"
                                                           t-value="total_government + line.price_unit"/>
                                                        <span t-esc="line.price_unit"
                                                              t-esc-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                                    </t>
                                                    <t t-else="">
                                                        <span>0.0</span>
                                                    </t>
                                                </td>
                                                <td class="text-right">
                                                    <t t-if="not line.is_government_fees_line">
                                                        <t t-set="total_service_amount"
                                                           t-value="total_service_amount + line.price_unit"/>
                                                        <span t-esc="line.price_unit"
                                                              t-esc-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                                    </t>
                                                    <t t-else="">
                                                        <span>0.0</span>
                                                    </t>
                                                </td>
                                                <!--                                                </t>-->
                                            </tr>
                                        </tbody>
                                    </table>

                                    <div class="row justify-content-end">
                                        <div class="col-4">
                                            <table class="table table-sm">
                                                <tr class="border-black">
                                                    <td class="text-left">
                                                        <strong>Sub Total in [OAR,USD]</strong>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="total_government"
                                                              t-esc-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="total_service_amount"
                                                              t-esc-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                                    </td>
                                                </tr>
                                                <tr class="border-black">
                                                    <td class="text-left">
                                                        <strong>End Total</strong>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="total_government + total_service_amount"
                                                              t-esc-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-6">
                                            <span>Bank Detail</span>
                                            <br/>
                                            <strong>Currency</strong>
                                            <br/>
                                            <span>Bank Account Name</span>
                                            <t t-if="o.invoice_partner_bank_id.acc_number">
                                                <span t-esc="o.invoice_partner_bank_id.partner_id.name"/>
                                            </t>

                                            <br/>
                                            <span>Bank Name:</span>
                                            <t t-if="o.invoice_partner_bank_id.bank_id">
                                                <span t-esc="o.invoice_partner_bank_id.bank_id.name"/>
                                            </t>
                                            <br/>
                                            <span>Bank Address</span>
                                            <t t-if="o.invoice_partner_bank_id.bank_id.street">
                                                <span>
                                                    <t t-esc="o.invoice_partner_bank_id.bank_id.street"/>
                                                </span>
                                            </t>
                                            <t t-if="o.invoice_partner_bank_id.bank_id.street2">
                                                <span>,
                                                    <t t-esc="o.invoice_partner_bank_id.bank_id.street2"/>
                                                </span>
                                            </t>
                                            <t t-if="o.invoice_partner_bank_id.bank_id.city">
                                                <span>,
                                                    <t t-esc="o.invoice_partner_bank_id.bank_id.city"/>
                                                    <t t-if="o.invoice_partner_bank_id.bank_id.zip">
                                                        ,
                                                        <t t-esc="o.invoice_partner_bank_id.bank_id.zip"/>
                                                    </t>
                                                </span>
                                            </t>
                                            <t t-if="o.invoice_partner_bank_id.bank_id.state">
                                                <span>,<t t-esc="o.invoice_partner_bank_id.bank_id.state.name"/>,
                                                    <t t-esc="o.invoice_partner_bank_id.bank_id.country.name"/>
                                                </span>
                                            </t>
                                            <br/>
                                            <span>Bank Account Number</span>
                                            <t t-if="o.invoice_partner_bank_id.acc_number">
                                                <span t-esc="o.invoice_partner_bank_id.acc_number"/>
                                            </t>
                                            <br/>
                                            <span>IBAN Number</span>
                                            <t t-if="o.invoice_partner_bank_id.partner_id.iban_number">
                                                <span t-esc="o.invoice_partner_bank_id.partner_id.iban_number"/>
                                            </t>
                                            <br/>
                                            <span>SWIFTBIC Number</span>
                                            <t t-if="o.invoice_partner_bank_id.bank_id.bic">
                                                <span t-esc="o.invoice_partner_bank_id.bank_id.bic"/>
                                            </t>
                                        </div>
                                    </div>

                                </body>
                            </html>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>