<odoo>
    <data>
        <report
                id="hr_loan"
                model="hr.loan"
                string="Loan Request Report"
                name="matco_loan_management.hr_loan_request_report"
                report_type="qweb-pdf"
                attachment_use="True"
                attachment=""
        />
    </data>

    <template id="hr_loan_request_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Report title</h2>
                        <p>This object's name is
                            <span t-field="o.name"/>
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>