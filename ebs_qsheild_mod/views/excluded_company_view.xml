<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>
        <!--list view -->
        <record id="excluded_company_tree" model="ir.ui.view">
            <field name="name">Excluded Company Tree</field>
            <field name="model">excluded.company</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="related_companies" widget="many2many_tags" string="Related Companies"/>
                </tree>
            </field>
        </record>
        <!--form view -->
        <record id="excluded_company_form" model="ir.ui.view">
            <field name="name">Excluded Company form</field>
            <field name="model">excluded.company</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="related_companies" widget="many2many_tags" string="Related Companies"
                                       domain="[('person_type','=','company')]"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--window -->
        <record id="excluded_company_action" model="ir.actions.act_window">
            <field name="name">Excluded Company</field>
            <field name="res_model">excluded.company</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--menu -->


    </data>
</odoo>